<article>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input class="text-box-class" name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="content">Text</label>
            <textarea class="text-box-class" id="content" name="content"/>{{post.content}}</textarea>
        </div>
        <div>
            {{format_date post.created_at}} | 
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
        <button class = "btn btn-info btn-sm" type="submit">Save Post</button>
        <button class="btn btn-danger btn-sm delete-post-btn" type="button">Delete Post</button>
    </form>
</article>
<hr>
<form class="comment-form">
    <p>Submit a comment:</p>
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
    {{> comments post.comments}}

</form>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>