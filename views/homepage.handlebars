
    <ol>
        {{#each blogPosts}}
        <li>
            <article>
                <div>
                    <h1>{{title}}</h1>
                    <p>{{content}}</p>
                    <div>by: {{user.username}} on {{format_date created_at}}</div>
                    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
                </div>
            </article>
        </li>
        {{/each}}
    </ol>
