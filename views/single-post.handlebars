<article class="post">
    <div>
        <h1>{{post.title}}</h1>
    </div>
    <div>
        {{post.created_at}}

        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        <div>
            {{#each post.comments}}
                <article>
                    {{user.username}} on {{created_at}}
                    <div>
                        <p>{{comment_text}}</p>
                    </div>
                </article>
            {{/each}}
        </div>
        
    </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}