<article class="post">
    <div>
        <h1>{{post.title}}</h1>
    </div>
    <div>
        {{post.created_at}}

        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        <div>
            {{#each post.comments}}
                <article>
                    {{user.username}} on {{created_at}}
                    <div>
                        <p>{{comment_text}}</p>
                    </div>
                </article>
            {{/each}}
        </div>
        
    </div>
</article>