<article class="post">
    <div class="card">
        <h1 class="bg-light">{{post.title}}</h1>
        <p>{{post.content}}</p>
        <p class="bg-light">Posted: {{format_date post.created_at}}</p>
    </div>
    <div>
        

        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
 {{> comments post.comments}}
        
    </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea class="text-box-class" name="comment-body"></textarea>
    </div>

    <div>
        <button class="btn btn-secondary btn-sm" type="submit">Add Comment</button>
    </div>
</form>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}